{
  "manifest_version": 3,
  "name": "Universal Chat Coherence Analyzer",
  "version": "1.0.0",
  "description": "Analyze coherence and quality of human conversations across any chat platform",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html"
  }
}